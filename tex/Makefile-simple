SHELL := /bin/bash

all:	pdf

compress:
	compresspdf-ps2pdf paper.pdf paper-compressed.pdf

bib:	pdf
	pdflatex paper.tex
	bibtex paper
	pdflatex paper.tex
	pdflatex paper.tex

pdf:
	pdflatex paper.tex
	bibtex paper
	rm -f paper-compressed.pdf

autosync:
	gitsyncroot-nomsg-periodic 4

view:
	echo pdfview paper.pdf
	$(PDFVIEW) paper.pdf

clean:
	rm -rf paper.{pdf,aux,blg,bbl,log,out,aux}

